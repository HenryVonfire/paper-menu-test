<h2>How to reproduce the bug:</h2>
<ol>
  <li>open firefox</li>
  <li>go to localhost:4200</li>
  <li>click on one of the paper menu buttons (on the right)</li>
  <li>click on the test option in the dropdown menu</li>
  <li>try to click again on the same paper menu button (it won't open)</li>
</ol>
{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools}}
    Curly brackets syntax
    <span class="flex"></span>
    {{#paper-menu position="target-right target" as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "more_vert" class="md-menu-origin"}}
        {{/paper-button}}
      {{/menu.trigger}}

      {{#menu.content as |content|}}
        {{#each buttons as |button|}}
          {{#content.menu-item onClick=(action "myAction")}}
            <p class="paper-menu__item__text">{{button.label}}</p>
            {{paper-icon button.icon class="md-menu-align-target"}}
          {{/content.menu-item}}
        {{/each}}
      {{/menu.content}}
    {{/paper-menu}}
  {{/toolbar.tools}}
{{/paper-toolbar}}


<PaperToolbar as |toolbar|>
  <toolbar.tools>
    Angle brackets syntax
    <span class="flex"></span>
    <PaperMenu 
      @position="target-right target" 
    as |menu|>
      <menu.trigger>
        <PaperButton 
          @onClick={{null}} 
          @iconButton={{true}}
        >
          <PaperIcon @icon="more_vert" class="md-menu-origin" />
        </PaperButton>
      </menu.trigger>

      <menu.content as |content|>
        {{#each buttons as |button|}}
          <content.menu-item @onClick={{action "myAction"}}>
            <p class="paper-menu__item__text">{{button.label}}</p>
            <PaperIcon @icon={{button.icon}} class="md-menu-align-target" />
          </content.menu-item>
        {{/each}}
      </menu.content>
    </PaperMenu>
  </toolbar.tools>
</PaperToolbar>